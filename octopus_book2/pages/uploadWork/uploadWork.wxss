.uploadWorkPage{
    padding: 30rpx;
    border-top: 2px solid #eee;

}
.work-text{
    box-sizing: border-box;
    padding: 20rpx;
    width: 100%;
    height: 154rpx;
    color: #666;
    font-size: 28rpx;
    border: 1px solid #e5e5e5;
    border-radius: 4rpx;
    background: #f5f5f5;
}
.placeholder-style{
    color: #A0AAB7;
    font-size: 24rpx;
}
.imgUpload{
    box-sizing: border-box;
    padding: 40rpx 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}
.uploadBtn{
    display: flex;
    justify-content: center;
    line-height: 200rpx;
    border: 1px solid #eee;
    border-radius: 4rpx;
    background: #fafafa;
}
.imgUpload .uploadImg{
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    min-height: 200rpx;
}