/* pages/my.wxss */
.usertop{
    box-sizing: border-box;
    padding: 40rpx 20rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 20rpx solid #FAFAFA;
}
.userInfo{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.avater{
    width: 130rpx;
    height: 130rpx;
    border: 1px solid #e5e5e5;
    border-radius: 50%;
}

.userInfo .uname{
    margin: 0 40rpx;
    color: #6699FF;
    font-size: 24rpx;
    text-decoration: underline;
}


.myWorkContainer{
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
}
.myWork-input{
    position: relative;
    padding: 40rpx 0;
    display: flex;
    color: #666;
    font-size: 32rpx;
    border-bottom: 1px solid #EEEEEE;
}
.myWork-input text{
    position: absolute;
    top: 50%;
    left: 0;
    width: 200rpx;
    transform: translateY(-50%);
}
.myWork-input input{
    box-sizing: border-box;
    margin-left: 200rpx;
    width: 100%;
    color: #666;
    font-size: 28rpx;
}
.myWork-textarea{
    padding: 40rpx 0;
    display: flex;
    flex-direction: column;
    color: #666;
    font-size: 32rpx;    
}
.myWork-textarea text{
    margin-bottom: 40rpx;
}
.myWork-textarea-style{
    box-sizing: border-box;
    padding: 20rpx;
    width: 100%;
    height: 160rpx;
    color: #666;
    font-size: 28rpx;
    border: 1px solid #eee;
    border-radius: 4rpx;
    background: #FAFAFA;
}
.jiGouXinXiPage-submit-btn{
    margin-top: 60rpx;
}