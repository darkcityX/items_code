.zhaoShengXiaoSuoPage{
    padding: 30rpx;
    min-height: 95vh;
    background: #fafafa;
}

.list-item{
    margin-bottom: 36rpx;
}
.list-item:last-child{
    margin-bottom: 0;
}
.list-item-top{
    margin-bottom: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.list-item-top-left,list-item-top-right{
    min-width: 200rpx;
}
.list-item-top-time{
    padding: 0 10rpx;
    color: #999;
    font-size: 24rpx;
    background: #fff;
}
.list-item-top-info{
    color: #FDB102;
    font-size: 20rpx;
    text-align: right;
}
.list-item-bottom{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.list-item-card{
    box-sizing: border-box;
    margin-bottom: 20rpx;
    padding: 0 28rpx;
    display: flex;
    line-height: 100rpx;
    justify-content: space-between;
    border-radius: 4rpx;
    background: #fff;
}
.list-item-card:lst-child{
    margin-bottom: 0rpx;
}
.list-item-user-name{
    color: #333;
    font-size: 30rpx;
}
.list-item-user-icon{
    color: #999;
    font-size: 28rpx;
}
.list-item-user-info{
    color: #999;
    font-size: 24rpx;
}