/* pages/my.wxss */
.usertop{
    box-sizing: border-box;
    padding: 40rpx 20rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 20rpx solid #FAFAFA;
}
.userInfo{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.avater{
    box-sizing: border-box;
    width: 130rpx;
    height: 130rpx;
    border: 1px solid #333;
    border-radius: 50%;
}
.userInfo .uname{
    margin: 0 40rpx;
    color: #333;
    font-size: 40rpx;
}
.iconFonts{
    display: flex;
    color: #FDB102;
    align-items: center;
}

.myWorkContainer{
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
}
.myWork{
    padding: 20rpx 0;
    display: flex;
    justify-content: space-between;
    color: #333;
    font-size: 32rpx;
    border-bottom: 1px solid #EEEEEE;
}
.myWork icon{
    display: flex;
    color: #FDB102;
    align-items: center;
}

.myCollection{
    padding: 40rpx 0;   
}
.myCollectionTitle{
    position: relative;
    display: flex;
    color: #333;
    font-size: 32rpx;
    justify-content: space-between;
}
.myCollectionTitle icon{
    display: flex;
    color: #FDB102;
    align-items: center;
}
.shareBtn{
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;    
    border:none !important;
    background: red;
    /* background: (255,255,255,0); */
    background-color: none;
}
.myCollectionDetails{
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
}
.imgCover,.collectionInfo{
    width: 50%;
}
.imgCover{
    box-sizing: border-box;
    padding: 20rpx;
    width: 292rpx;
    height: 320rpx;
    object-fit: contain;
    border: 4px solid #666666;
    border-radius: 4rpx;
}
.imgCover image{
    margin-bottom: 0;
    height: 80rpx;    
}
.collectionInfo{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.collectionInfo view{
    padding: 20rpx 0;
    color: #666666;
    font-size: 28rpx;
    border-bottom: 1px solid #EEEEEE;
}
.text-btnBg{
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    border-radius: 50%;
    background: #FDB102;
}
