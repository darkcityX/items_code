/* pages/my.wxss */
.usertop{
    box-sizing: border-box;
    padding: 40rpx 20rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 20rpx solid #FAFAFA;
}
.userInfo{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.avater{
    box-sizing: border-box;
    width: 130rpx;
    height: 130rpx;
    object-fit: contain;
    border: 1px solid #e5e5e5;
    border-radius: 50%;
}
.userInfo .uname{
    margin: 0 40rpx;
    color: #666;
    font-size: 40rpx;
}
.usertop >icon{
    display: flex;
    color: #666;
    font-size: 12px;
    align-items: center;
}

.myWorkContainer{
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
}
.myWork{
    padding: 40rpx 0;
    display: flex;
    justify-content: space-between;
    color: #666;
    font-size: 32rpx;
    border-bottom: 1px solid #EEEEEE;
}
.myWork icon{
    display: flex;
    align-items: center;
}
.shareViewContainer{
    position: relative;
}
.shareBtn{
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;    
    border:none !important;
    background: (255,255,255,0);
    background-color: none;
}

/*机构用户——修改机构名弹出对话框*/ 
.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
left:0;top:0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.modal_box {
  width: 76%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 12% 0 12%;
  border-radius: 3px;
}
 
.modal_title {
